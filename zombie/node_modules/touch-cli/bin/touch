#!/usr/bin/env node

var program  = require("commander"),
	fs = require("fs");

program
	.version("0.0.1")
	.usage("[filename]")
	.parse(process.argv);

var filename = program.args.shift();

if (filename) {
	console.log("Touching " + filename);

	var fd = fs.openSync(filename, "a"),
		now = new Date();

	fs.futimesSync(fd, now, now);
	fs.closeSync(fd);
}